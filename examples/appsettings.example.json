{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MiAplicacion;Trusted_Connection=true;MultipleActiveResultSets=true",
    "MongoConnection": "mongodb://localhost:27017"
  },
  "Hubble": {
    "RequireAuthentication": true,
    "Username": "admin",
    "Password": "hubble123",
    "BasePath": "/hubble",
    "ServiceName": "MiAplicacion",
    "EnableDiagnostics": false,
    "CaptureLoggerMessages": true,
